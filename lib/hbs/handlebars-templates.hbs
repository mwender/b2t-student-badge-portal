<script id="table-row-template" type="text/x-handlebars-template">
    {{#if rows}}
      {{#each rows}}
      <tr data-ts="{{timestamp}}">
        <td>{{name}}</td>
        <td>{{formatDate date day="numeric" month="numeric" year="numeric"}}</td>
      </tr>
      {{/each}}
    {{/if}}
</script>
